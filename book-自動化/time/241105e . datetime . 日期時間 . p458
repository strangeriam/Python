import datetime

datetime.datetime.now()
輸出: datetime.datetime(2024, 11, 5, 14, 11, 49, 935071)

dt = datetime.datetime(2024, 11, 5, 14, 11, 49, 0)
dt.year, dt.month, dt.day
輸出: (2024, 11, 5)

dt.hour, dt.minute, dt.second
輸出: (14, 11, 49)


## 比較運算子
halloween2024 = datetime.datetime(2024, 11, 5, 0, 0, 0)
newyears2025 = datetime.datetime(2025, 1, 1, 0, 0, 0)
dec31_2024 = datetime.datetime(2024, 11, 5, 0, 0, 0)

halloween2024 > newyears2025
輸出: False

newyears2025 > halloween2024
輸出: True

newyears2025 != dec31_2024
輸出: True
