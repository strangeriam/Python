;# CODE A
;# =======
def hello():
	print("Hello!")

hello()

;# OUTPUT
Hello!


;# CODE B
;# =======
def user_age_in_seconds():
	user_age = int(input("Enter your age: "))
	age_seconds = user_age * 365 * 24 * 60 * 60
	print(f"Your age in seconds is {age_seconds}.")

user_age_in_seconds()

;# OUTPUT
Enter your age: 30
Your age in seconds is 946080000.



;# CODE C
;# =======
friends = []

def add_friend():
	friends.append("Rolf")

add_friend()
add_friend()
add_friend()

print(friends)

;# OUTPUT
['Rolf', 'Rolf', 'Rolf']

