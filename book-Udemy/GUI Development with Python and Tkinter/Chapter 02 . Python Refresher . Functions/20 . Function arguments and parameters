;# =======
def add(x, y):
	result = x + y
	print(result)

add(5, 3)

;# OUTPUT:
8


;# Code B
;# =======
def say_hello(name):
	print(f"Hello, {name}")

say_hello("Lu")

;# OUTPUT:
Hello, Lu

;# Code C
;# surname å§“
;# =======
def say_hello(name, surname):
	print(f"Hello, {name}, and, {surname}")

say_hello("Lu", "Rlulu")

;# OUTPUT:
Hello, Lu, and, Rlulu

;# Code D
;# =======
def say_hello(name, surname):
	print(f"Hello, {name}, and, {surname}")

say_hello(surname="Rlulu", name="Lu")

;# OUTPUT:
Hello, Lu, and, Rlulu

